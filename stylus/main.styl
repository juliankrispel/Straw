@import "../node_modules/stylus-components/*.styl"


body{
    line-height: 1.5em;
}

input[type="text"], select{
    line-height: inherit;
    border: none;
    border: 1px solid #ccc;
    display: block;
    width: 100%;
    //padding: .4em;
}
select{
    padding: .41em;
}

header{
    background: #000;
    padding: 1em;
    width: 100%;
    position: fixed;
    top: 0;
}

button{ 
    background: none;
    border: none;
    padding: .5em .7em;
    cursor: pointer; 
}

*{ box-sizing: border-box; }

.btn-danger{
    background: #CF0808;
    color: #fff;
}

body{
    background: #eee;
    padding: 4em 0 2em;
}

.btn-large{
    font-size: 1.5em;
    background: #fff;
    width: 100%;
    display: block;
    padding: .5em .8em;
    border: none;
}

.select-block{
    background: rgba(255, 255, 255, 0.5);
    &.active{
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        padding: 3em;
    }
    button{
        font-size: 1.1em;
        background: #fff;
        width: calc(100%/3 - 4px);
        margin: 2px;
        border: none;
        padding: 4em 2em;
        &[disabled]{
            cursor: auto;
            color: #999;
            background: #e0e0e0;
        }
    }
}

.task{
    display: inline-block;
    margin: 0 2em;
    width: 400px;
    vertical-align: top;
}

.remove-block{
    padding: 0;
    font-weight: normal;
    font-size: 1.8em;
    margin-top: -.3em;
    line-height: .7em;
}

.nowrap{ white-space: nowrap; }

.add-task{
    display: inline-block;
    vertical-align: top;
    margin: 0 1em;
    width: auto;
}

.block{
    h1{
        margin: 0 0 1em 0;
    }
    background: #fff;
    display: block;
    width: 100%;
    padding: 1em;
    margin-bottom: 1em;
