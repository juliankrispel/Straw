@import "../node_modules/stylus-components/*.styl"

*{ 
    outline: none; 
}

body{
    line-height: 1.5em;
}

input[type="text"], select{
    border: none;
    border: 1px solid #ccc;
    display: block;
    width: 100%;
    line-height: 1em;
    padding: .4em;
}

select{
    padding: .41em;
}

header{
    background: #000;
    padding: 1em;
    width: 100%;
    position: fixed;
    top: 0;
}

button{ 
    background: none;
    border: none;
    padding: .5em .7em;
    cursor: pointer; 
}

*{ box-sizing: border-box; }

.btn-danger{
    background: #CF0808;
    color: #fff;
}

body{
    background: #eee;
    padding: 4em 0 2em;
}

.btn-large{
    font-size: 1.5em;
    background: #fff;
    width: 100%;
    display: block;
    padding: .5em .8em;
    border: none;
    border: 1px solid #ccc;
}

.select-block{
    white-space: normal;
    background: rgba(0, 0, 0, 0.3);
    &.active{
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        padding: 3em;
    }
    button{
        text-transform: uppercase;
        font-size: 1.4em;
        background: #fff;
        transition: 300ms;
        height: calc(100%/3 - 1em);
        width: calc(100%/3 - 1em);
        margin: .5em;
        border: none;
        padding: 0em 1em;
        float: left;
        line-height: 1.5em;
        transform: scale(1);
        &[disabled]{
            cursor: auto;
            color: #999;
            background: #e0e0e0;
        }
        &:hover{
            transform: scale(1.05);
        }
    }
}

.closeBlockSelection{
    position: absolute;
    top: .2em;
    font-weight: bold;
    right: .2em;
    background: #fff !important;
    border: 1px solid #333 !important;
    color: #333;
    font-size: 1.5em !important;
    border-radius: 2em;
    vertical-align: middle;
    line-height: 1em !important;
    padding: 0 !important;
    text-align: center;
    width: 1.5em !important;
    height: 1.5em !important;
}

.task{
    display: inline-block;
    margin: 0 2em;
    width: 400px;
    vertical-align: top;
}

.remove-block{
    padding: 0;
    font-weight: normal;
    font-size: 1.8em;
